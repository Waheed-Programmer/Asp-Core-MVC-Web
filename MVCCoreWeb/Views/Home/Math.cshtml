@model MVCCoreWeb.Models.ModelMath

@{
    ViewData["Title"] = "Math";
}

    <h1>Caluclations</h1><br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Math">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstNum" class="control-label">First Number</label>
                <input asp-for="FirstNum" class="form-control" />
                <span asp-validation-for="FirstNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastNum" class="control-label">Last Number</label>
                <input asp-for="LastNum" class="form-control" />
                <span asp-validation-for="LastNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Result" class="control-label">@Model.Result</label>
               
               
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <input type="submit" value="Clear" class="btn btn-danger" />

            </div>
        </form>
    </div>
</div>


